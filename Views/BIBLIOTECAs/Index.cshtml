@model IEnumerable<BIBLIOTECA2.Models.BIBLIOTECA>

@{
    ViewBag.Title = "Index";
}

<h3>Indice de Bibliotecas</h3>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <a href="@Url.Action("Create","BIBLIOTECAs")" class="btn btn-primary">Crear Biblioteca</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LIBRO.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.USUARIO.Contraseña)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LIBRO.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.USUARIO.Contraseña)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
